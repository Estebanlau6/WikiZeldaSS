<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="WikiZeldaSS.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WikiZeldaSS.Pages.ViewModels"
             Title="Wiki Zelda Skyward Sword"
             BackgroundColor="#1a1a2e"
             x:DataType="vm:MainViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <!-- Titre principal -->
            <Label Text="Wiki Zelda"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="#ffd700"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Label Text="Skyward Sword"
                   FontSize="24"
                   FontAttributes="Italic"
                   TextColor="#87ceeb"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30" />

            <!-- Description -->
            <Label Text="Découvrez l'univers de Zelda Skyward Sword : personnages, objets, lieux et quêtes vous attendent !"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,30" />

            <!-- Boutons de navigation -->
            <Button Text="🧙‍♂️ Personnages"
                    FontSize="18"
                    BackgroundColor="#4a90e2"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnPersonnagesClicked" />

            <Button Text="⚔️ Objets"
                    FontSize="18"
                    BackgroundColor="#e74c3c"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnObjetsClicked" />

            <Button Text="🏔️ Lieux"
                    FontSize="18"
                    BackgroundColor="#27ae60"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnLieuxClicked" />

            <Button Text="📜 Quêtes"
                    FontSize="18"
                    BackgroundColor="#f39c12"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnQuetesClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>