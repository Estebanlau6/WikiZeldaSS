<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WikiZeldaSS.Pages.MainPage"
             Title="Accueil"
             BackgroundColor="#1a1a2e">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="#0d1321" />
                <Setter Property="Stroke" Value="#ffd700" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 15" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="MinimumHeightRequest" Value="130" />
            </Style>

            <Style x:Key="CardContentStyle" TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="10" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="EmojiIconStyle" TargetType="Label">
                <Setter Property="FontSize" Value="50" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="CardLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="16" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <Label Text="Wiki Zelda Skyward Sword"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#ffd700"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Border Stroke="#ffd700"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 20"
                    HorizontalOptions="Center"
                    BackgroundColor="#0d1321"
                    Padding="5">
                <Image Source="logo_jeu.png"
                       Aspect="AspectFit"
                       HeightRequest="200"
                       WidthRequest="300" />
            </Border>

            <Label Text="Bienvenue sur le Wiki Zelda Skyward Sword ! Explorez les quêtes, lieux, objets et personnages pour tout savoir sur Hyrule."
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap" />

            <BoxView HeightRequest="1" Color="#ffd700" HorizontalOptions="Fill" Margin="20,0" />

            <Grid ColumnSpacing="15" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource CardStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnQuetesClicked"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Style="{StaticResource CardContentStyle}">
                        <Label Text="📜" Style="{StaticResource EmojiIconStyle}"/>
                        <Label Text="Quêtes" Style="{StaticResource CardLabelStyle}"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="0" Grid.Column="1"
                        Style="{StaticResource CardStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLieuxClicked"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Style="{StaticResource CardContentStyle}">
                        <Label Text="🗺️" Style="{StaticResource EmojiIconStyle}"/>
                        <Label Text="Lieux" Style="{StaticResource CardLabelStyle}"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource CardStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnObjetsClicked"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Style="{StaticResource CardContentStyle}">
                        <Label Text="🏺" Style="{StaticResource EmojiIconStyle}"/>
                        <Label Text="Objets" Style="{StaticResource CardLabelStyle}"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource CardStyle}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPersonnagesClicked"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Style="{StaticResource CardContentStyle}">
                        <Label Text="🧝" Style="{StaticResource EmojiIconStyle}"/>
                        <Label Text="Personnages" Style="{StaticResource CardLabelStyle}"/>
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>