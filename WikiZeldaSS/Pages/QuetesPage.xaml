<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WikiZeldaSS.QuetesPage"
             Title="Wiki Zelda Skyward Sword"
             BackgroundColor="#1a1a2e">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Quêtes de Skyward Sword"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#ffd700"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <!-- Quêtes de gratitude -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="💖 Cristaux de gratitude"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#f39c12" />
                    <Label Text="Petites quêtes annexes confiées par les habitants de Célesbourg. Chaque mission réussie donne des cristaux à échanger contre des récompenses."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Livre d'amour de Bertie -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="📖 Livre d'amour de Bertie"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#e74c3c" />
                    <Label Text="Une quête romantique où Link doit choisir entre deux prétendants amoureux de la même personne."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quête des citrouilles -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🎃 Quête des citrouilles"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#27ae60" />
                    <Label Text="Au restaurant de la Citrouille perchée, Link doit travailler pour rembourser les pots cassés en servant les clients ou en transportant des citrouilles."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quête de l'île Bambou -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🎋 Défi de l'île Bambou"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#87ceeb" />
                    <Label Text="Un mini-jeu où Link doit couper le plus de bambous possible en un coup de sabre pour gagner des récompenses."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Chasse aux insectes -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🐞 Chasse aux insectes"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#9b59b6" />
                    <Label Text="Une quête confiée par Terry où Link doit capturer divers insectes rares disséminés dans les régions du monde."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <!-- Harpe de la Déesse -->
            <Frame BackgroundColor="#2c3e50" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🎶 Harpe de la Déesse"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#3498db" />
                    <Label Text="Quêtes musicales où Link doit jouer de la harpe pour réveiller les Dragons et ouvrir de nouveaux chemins."
                           FontSize="14"
                           TextColor="White"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
