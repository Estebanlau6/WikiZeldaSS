<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:vm="clr-namespace:WikiZeldaSS.ViewModels"
x:Class="WikiZeldaSS.MainPage"
x:DataType="vm:MainViewModel">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Nom :" FontSize="18" />
        <Entry Text="{Binding Name}" />
        <Label Text="Âge :" FontSize="18" />
        <Entry Text="{Binding Age, Mode=TwoWay}" Keyboard="Numeric" />
        <Button Text="Incrémenter l'âge" Command="{Binding IncrementAgeCommand}" />
        <Label Text="{MultiBinding {Binding Name}, {Binding Age}, StringFormat='Bonjour, {0} ! Vous avez {1} ans.'}" FontSize="16" />
    </VerticalStackLayout>
</ContentPage>